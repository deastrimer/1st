#include <iostream>
#include <cmath>
using namespace std;
int second()
{
 int number1,number2,number3,degree,sum;
 cout << "введите первоe число "<< endl;
 cin >> number1;
 cout << "введите второе число "<< endl;
 cin >> number2;
 cout << "введите третье число "<< endl;
 cin >> number3;
 cout << "степень "<< endl;
 cin >> degree;
 sum = pow((number1+number2+number3),degree);
 cout << "сумма = " << sum;
 return sum;
}

int main() {
second();
}
